{
    "require-dev": {
        "behat/behat": "^3.11",
        "behat/mink": "^1.10",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^3.13",
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1",
        "phpmd/phpmd": "^2.15"
      
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "test-unit": "phpunit --testsuite=Unit --testdox --colors=always",
        "test-feature": "behat --colors",
        "test-all": [
            "echo \"\\nğŸ§ª Running Unit Tests...\"",
            "@test-unit",
            "echo \"\\nğŸ­ Running Feature Tests...\"", 
            "@test-feature",
            "echo \"\\nâœ… All tests completed!\""
        ],
        "test-verbose": [
            "echo \"\\n=== UNIT TESTS (Detailed) ===\"",
            "phpunit --testdox --display-warnings --display-notices --colors=always",
            "echo \"\\n=== FEATURE TESTS (Detailed) ===\"",
            "behat --colors --verbose"
        ],
        "test-quick": "phpunit --colors=always && behat --colors",
        "cs": "php-cs-fixer fix --dry-run --diff --verbose",
        "cs-fix": "php-cs-fixer fix --verbose",
        "cs-check": "phpcs --standard=phpcs.xml",
    "cs-report": "phpcs --standard=phpcs.xml -s",
        "cs-fix-phpcs": "phpcbf --standard=phpcs.xml",
        "cs-all": [
            "echo \"\\nğŸ” Running PHP CS Fixer (dry-run)...\"",
            "@cs",
            "echo \"\\nğŸ” Running PHP CodeSniffer...\"",
            "@cs-check"
        ],
        "fix-all": [
            "echo \"\\nğŸ”§ Fixing with PHP CS Fixer...\"",
            "@cs-fix",
            "echo \"\\nğŸ”§ Fixing with PHP CodeSniffer...\"",
            "@cs-fix-phpcs",
            "echo \"\\nâœ… All code style issues fixed!\""
        ],
        "quality": [
            "echo \"\\nğŸ” Running Code Quality Checks...\"",
            "@cs-all",
            "echo \"\\nğŸ§ª Running Tests...\"",
            "@test-all",
            "echo \"\\nâœ… Quality checks completed!\""
        ],
        "quality-fix": [
            "echo \"\\nğŸ”§ Fixing Code Quality Issues...\"",
            "@fix-all",
            "echo \"\\nğŸ§ª Running Tests After Fixes...\"",
            "@test-all",
            "echo \"\\nâœ… Quality fixes and tests completed!\""
        ],
        "stan": "phpstan analyse --level=8",
        "mess": "phpmd app text cleancode,codesize,controversial,design,naming,unusedcode",
        "full-check": [
            "@quality",
            "@stan",
            "@mess"
        ]
    }
}
